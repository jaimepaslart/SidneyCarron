---
import PageLayout from '@/layouts/PageLayout.astro';
import { getTranslation, type Lang } from '@/i18n';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = getTranslation(lang);

const siteUrl = 'https://sidneycarron.com';

const jsonLd = {
  '@context': 'https://schema.org',
  '@graph': [
    {
      '@type': 'ContactPage',
      name: t('contact.title'),
      description: t('contact.description'),
      url: `${siteUrl}/${lang === 'en' ? 'en/' : ''}contact`,
    },
    {
      '@type': 'BreadcrumbList',
      itemListElement: [
        { '@type': 'ListItem', position: 1, name: 'Sidney Carron', item: siteUrl },
        { '@type': 'ListItem', position: 2, name: t('contact.title') },
      ],
    },
  ],
};
---

<PageLayout
  title={`${t('contact.title')} — Sidney Carron`}
  description={t('contact.description')}
  canonicalPath="/contact"
  jsonLd={jsonLd}
>
  <section class="museum-section">
    <div class="museum-container max-w-2xl">
      <h1 class="text-h1 font-serif font-light text-museum-text mb-6 animate-on-scroll">
        {t('contact.title')}
      </h1>
      <p class="font-sans text-body text-museum-caption mb-12 animate-on-scroll">
        {t('contact.intro')}
      </p>

      <form
        id="contact-form"
        name="contact"
        method="POST"
        data-netlify="true"
        netlify-honeypot="bot-field"
        action={lang === 'en' ? '/en/contact/?success=true' : '/contact/?success=true'}
        class="animate-on-scroll"
      >
        <input type="hidden" name="form-name" value="contact" />
        <p class="hidden" aria-hidden="true">
          <label>
            Don't fill this out if you're human:
            <input name="bot-field" tabindex="-1" autocomplete="off" />
          </label>
        </p>
        <input type="hidden" name="lang" value={lang} />

        <div class="space-y-8">
          <!-- Name -->
          <div>
            <label
              for="name"
              class="museum-label block mb-2"
            >
              {t('contact.name').toUpperCase()} *
            </label>
            <input
              type="text"
              id="name"
              name="name"
              required
              minlength="2"
              placeholder={t('contact.name_placeholder')}
              class="w-full font-sans text-body px-0 py-3 bg-transparent border-0 border-b border-museum-border text-museum-text placeholder:text-museum-caption/50 focus:border-museum-accent focus:outline-none focus:ring-0 transition-colors duration-base ease-museum"
            />
          </div>

          <!-- Email -->
          <div>
            <label
              for="email"
              class="museum-label block mb-2"
            >
              {t('contact.email').toUpperCase()} *
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              placeholder={t('contact.email_placeholder')}
              class="w-full font-sans text-body px-0 py-3 bg-transparent border-0 border-b border-museum-border text-museum-text placeholder:text-museum-caption/50 focus:border-museum-accent focus:outline-none focus:ring-0 transition-colors duration-base ease-museum"
            />
          </div>

          <!-- Subject -->
          <div>
            <label
              for="subject"
              class="museum-label block mb-2"
            >
              {t('contact.subject').toUpperCase()} *
            </label>
            <div class="relative">
              <select
                id="subject"
                name="subject"
                required
                class="w-full font-sans text-body px-0 py-3 bg-transparent border-0 border-b border-museum-border text-museum-text focus:border-museum-accent focus:outline-none focus:ring-0 transition-colors duration-base ease-museum appearance-none cursor-pointer"
              >
                <option value="" disabled selected>{t('contact.subject_placeholder')}</option>
                <option value="gallery">{t('contact.subject_gallery')}</option>
                <option value="collector">{t('contact.subject_collector')}</option>
                <option value="press">{t('contact.subject_press')}</option>
                <option value="other">{t('contact.subject_other')}</option>
              </select>
              <svg
                class="absolute right-0 top-1/2 -translate-y-1/2 w-4 h-4 text-museum-caption pointer-events-none"
                viewBox="0 0 16 16"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <path d="M4 6l4 4 4-4" />
              </svg>
            </div>
          </div>

          <!-- Message -->
          <div>
            <label
              for="message"
              class="museum-label block mb-2"
            >
              {t('contact.message').toUpperCase()} *
            </label>
            <textarea
              id="message"
              name="message"
              required
              minlength="10"
              rows="5"
              placeholder={t('contact.message_placeholder')}
              class="w-full font-sans text-body px-0 py-3 bg-transparent border-0 border-b border-museum-border text-museum-text placeholder:text-museum-caption/50 focus:border-museum-accent focus:outline-none focus:ring-0 transition-colors duration-base ease-museum min-h-[120px] resize-y"
            ></textarea>
          </div>

          <!-- Submit -->
          <div>
            <button
              type="submit"
              id="submit-btn"
              data-sending={t('contact.sending')}
              class="font-sans text-small uppercase tracking-museum px-8 py-3 border border-museum-text text-museum-text bg-none hover:bg-museum-text hover:text-museum-white transition-colors duration-base ease-museum rounded-full disabled:opacity-50 disabled:cursor-not-allowed"
            >
              {t('contact.submit')}
            </button>
          </div>

          <!-- Privacy -->
          <p class="museum-mono text-small text-museum-label">
            {t('contact.privacy')}
          </p>
        </div>
      </form>

      <!-- Success message -->
      <div
        id="success-message"
        class="hidden mt-8 p-8 bg-museum-surface border border-museum-border"
      >
        <p class="font-serif text-h3 text-museum-text mb-2">
          {lang === 'fr' ? 'Message envoyé' : 'Message sent'}
        </p>
        <p class="font-sans text-body text-museum-caption">
          {t('contact.success')}
        </p>
      </div>

      <!-- Contact info -->
      <div class="mt-16 pt-8 border-t border-[#E8E6E0] animate-on-scroll">
        <p class="museum-label mb-4">{lang === 'fr' ? 'COORDONNÉES' : 'CONTACT INFO'}</p>
        <p>
          <a
            href="mailto:contact@sidneycarron.com"
            class="museum-mono text-body text-museum-text hover:text-museum-accent transition-colors duration-base ease-museum"
          >
            contact@sidneycarron.com
          </a>
        </p>
        <p class="mt-3">
          <a
            href="https://instagram.com/sidneycarron"
            target="_blank"
            rel="noopener noreferrer"
            class="font-sans text-body text-museum-text hover:text-museum-accent bg-none transition-colors duration-base ease-museum"
          >
            Instagram
          </a>
        </p>
      </div>
    </div>
  </section>
</PageLayout>

<script>
  // Show success message if URL has ?success=true
  const urlParams = new URLSearchParams(window.location.search);
  if (urlParams.get('success') === 'true') {
    const form = document.getElementById('contact-form');
    const successMsg = document.getElementById('success-message');
    if (form) form.classList.add('hidden');
    if (successMsg) successMsg.classList.remove('hidden');
  }

  // Prevent double submit
  const form = document.getElementById('contact-form') as HTMLFormElement;
  const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;

  form?.addEventListener('submit', () => {
    if (submitBtn) {
      submitBtn.disabled = true;
      submitBtn.textContent = submitBtn.getAttribute('data-sending') || '...';
    }
  });

  // Fade-in animations
  const items = document.querySelectorAll('.animate-on-scroll');
  if (!window.matchMedia('(prefers-reduced-motion: reduce)').matches) {
    const observer = new IntersectionObserver(
      (entries) => {
        const visible = entries.filter(e => e.isIntersecting);
        visible.forEach((entry, i) => {
          setTimeout(() => {
            entry.target.classList.add('is-visible');
          }, i * 100);
          observer.unobserve(entry.target);
        });
      },
      { threshold: 0.1, rootMargin: '0px 0px -40px 0px' }
    );
    items.forEach(item => observer.observe(item));
  }
</script>
