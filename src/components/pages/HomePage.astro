---
import PageLayout from '@/layouts/PageLayout.astro';
import WorkCard from '@/components/WorkCard.astro';
import HorizontalWorks from '@/components/HorizontalWorks.astro';
import { getCollection } from 'astro:content';
import { getTranslation, getLocalizedPath, type Lang } from '@/i18n';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = getTranslation(lang);

const allWorks = await getCollection('works');
const featuredWorks = allWorks
  .filter(w => w.data.featured)
  .sort((a, b) => a.data.order - b.data.order)
  .slice(0, 3);

const featuredItems = featuredWorks.map(work => ({
  slug: lang === 'en' ? work.data.slug_en : work.data.slug,
  title: lang === 'en' ? work.data.title_en : work.data.title_fr,
  year: work.data.year,
  medium: lang === 'en' ? work.data.medium_en : work.data.medium_fr,
  image: {
    src: work.data.images[0].src,
    alt: lang === 'en' ? work.data.images[0].alt_en : work.data.images[0].alt_fr,
  },
}));

const allExhibitions = await getCollection('exhibitions');
const currentExhibition = allExhibitions
  .filter(e => e.data.status === 'upcoming' || e.data.status === 'current')
  .sort((a, b) => new Date(a.data.start_date).getTime() - new Date(b.data.start_date).getTime())
  [0];

const allPress = await getCollection('press');
const recentPress = allPress
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())
  .slice(0, 3);

function formatMuseumDates(startStr: string, endStr: string): string {
  const start = new Date(startStr);
  const end = new Date(endStr);
  const sd = String(start.getDate()).padStart(2, '0');
  const sm = String(start.getMonth() + 1).padStart(2, '0');
  const ed = String(end.getDate()).padStart(2, '0');
  const em = String(end.getMonth() + 1).padStart(2, '0');
  const ey = end.getFullYear();
  if (start.getFullYear() === end.getFullYear()) {
    return `${sd}.${sm} — ${ed}.${em}.${ey}`;
  }
  return `${sd}.${sm}.${start.getFullYear()} — ${ed}.${em}.${ey}`;
}

function formatPressDate(dateStr: string): string {
  const d = new Date(dateStr);
  const day = String(d.getDate()).padStart(2, '0');
  const month = String(d.getMonth() + 1).padStart(2, '0');
  const year = d.getFullYear();
  return `${day}.${month}.${year}`;
}

const jsonLd = {
  '@context': 'https://schema.org',
  '@graph': [
    {
      '@type': 'WebSite',
      name: 'Sidney Carron',
      url: 'https://sidneycarron.com',
      inLanguage: [lang === 'fr' ? 'fr-FR' : 'en-US'],
    },
    {
      '@type': 'Person',
      name: 'Sidney Carron',
      jobTitle: lang === 'fr' ? 'Artiste photographe' : 'Visual artist & photographer',
      url: 'https://sidneycarron.com',
      image: 'https://sidneycarron.com/images/portrait-sidney-carron.jpg',
      sameAs: [
        'https://instagram.com/sidneycarron',
      ],
    },
  ],
};
---

<PageLayout
  title={t('home.title')}
  description={t('home.description')}
  jsonLd={jsonLd}
>
  <!-- Hero: text overlapping image -->
  <section class="hero-section" data-hero-parallax>
    <div class="museum-container">
      <div class="hero-grid">
        <!-- Text column (z-index 2, overlaps image) -->
        <div class="hero-text" data-parallax-layer="0.02">
          <p class="museum-label mb-8 hero-fade" style="animation-delay: 100ms;">
            {t('home.hero.subtitle')}
          </p>
          <h1 class="font-serif text-hero text-museum-text whitespace-pre-line hero-fade" style="animation-delay: 280ms;">
            {t('home.hero.statement')}
          </h1>
          <div class="mt-12 hero-fade" style="animation-delay: 480ms;">
            <a
              href={getLocalizedPath(lang, '/works')}
              class="inline-block font-sans text-small uppercase tracking-museum px-8 py-3 border border-museum-text text-museum-text bg-none hover:bg-museum-text hover:text-museum-white transition-colors duration-base ease-museum"
            >
              {t('home.featured.cta')}
            </a>
          </div>
        </div>

        <!-- Image column (z-index 1, behind text) -->
        <div class="hero-image hero-fade" style="animation-delay: 200ms;" data-parallax-layer="0.04">
          <img
            src="/images/hero-sidney-carron.jpg"
            alt={lang === 'fr' ? 'Sidney Carron — empreinte solaire' : 'Sidney Carron — solar imprint'}
            width="800"
            height="1000"
            loading="eager"
            class="w-full h-full object-cover"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Works: horizontal scroll -->
  <section class="museum-section">
    <div class="museum-container">
      <p class="museum-label mb-12" data-animate>{t('home.featured.label')}</p>
    </div>
    <HorizontalWorks works={featuredItems} lang={lang} />
    <div class="text-center mt-12" data-animate>
      <a
        href={getLocalizedPath(lang, '/works')}
        class="font-sans text-small text-museum-caption hover:text-museum-text bg-none transition-colors duration-base ease-museum"
      >
        {t('home.featured.cta')} &rarr;
      </a>
    </div>
  </section>

  <!-- Current Exhibition -->
  {currentExhibition && (
    <section class="museum-section bg-museum-surface">
      <div class="museum-container">
        <p class="museum-label mb-12" data-animate>{t('home.exhibitions.label')}</p>
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-gutter-lg items-center" data-animate>
          <div class="aspect-[4/3] bg-[#E8E6E0] overflow-hidden">
            <img
              src={currentExhibition.data.image.src}
              alt={lang === 'en' ? currentExhibition.data.image.alt_en : currentExhibition.data.image.alt_fr}
              width="800"
              height="600"
              loading="lazy"
              class="w-full h-full object-cover"
            />
          </div>
          <div>
            <h2 class="font-serif text-h2 text-museum-text">
              {lang === 'en' ? currentExhibition.data.title_en : currentExhibition.data.title_fr}
            </h2>
            <p class="font-sans text-body text-museum-caption mt-4">
              {lang === 'en' ? currentExhibition.data.venue_en : currentExhibition.data.venue_fr}, {currentExhibition.data.city}
            </p>
            <p class="museum-mono text-small text-museum-label mt-2">
              {formatMuseumDates(currentExhibition.data.start_date, currentExhibition.data.end_date)}
            </p>
            <div class="mt-8">
              <a
                href={getLocalizedPath(lang, `/exhibitions/${lang === 'en' ? currentExhibition.data.slug_en : currentExhibition.data.slug}`)}
                class="font-sans text-small text-museum-caption hover:text-museum-text bg-none transition-colors duration-base ease-museum"
              >
                {t('home.exhibitions.cta')} &rarr;
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Press -->
  {recentPress.length > 0 && (
    <section class="museum-section">
      <div class="museum-container">
        <p class="museum-label mb-12" data-animate>{t('home.press.label')}</p>
        <div class="space-y-8">
          {recentPress.map((article, i) => (
            <div class="border-b border-museum-border pb-8 last:border-0 last:pb-0" data-animate style={`transition-delay: ${i * 120}ms;`}>
              <div class="flex items-baseline gap-4">
                <span class="museum-label">{article.data.publication}</span>
                <span class="museum-mono text-small text-museum-label">{formatPressDate(article.data.date)}</span>
              </div>
              <p class="font-serif text-h3 text-museum-text mt-3 italic">
                {lang === 'en' ? article.data.title_en : article.data.title_fr}
              </p>
              {article.data.url && (
                <a
                  href={article.data.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-block font-sans text-small text-museum-caption hover:text-museum-text bg-none mt-3 transition-colors duration-base ease-museum"
                >
                  {t('press.read_article')} &rarr;
                </a>
              )}
            </div>
          ))}
        </div>
        <div class="text-center mt-12" data-animate>
          <a
            href={getLocalizedPath(lang, '/press')}
            class="font-sans text-small text-museum-caption hover:text-museum-text bg-none transition-colors duration-base ease-museum"
          >
            {t('home.press.cta')} &rarr;
          </a>
        </div>
      </div>
    </section>
  )}

  <!-- CTA Contact -->
  <section class="museum-section bg-museum-surface">
    <div class="museum-container text-center" data-animate>
      <p class="font-sans text-body text-museum-caption">
        {t('home.contact.intro')}
      </p>
      <a
        href={getLocalizedPath(lang, '/contact')}
        class="inline-block font-serif text-h2 text-museum-text mt-4 italic"
      >
        {t('home.contact.cta')}
      </a>
    </div>
  </section>
</PageLayout>

<style>
  /* Hero section */
  .hero-section {
    min-height: 90vh;
    display: flex;
    align-items: center;
    padding-top: 6rem;
    padding-bottom: 4rem;
    background-color: var(--museum-surface, #F5F4F0);
    overflow: hidden;
  }

  /* Hero grid: mobile stacked, desktop overlapping */
  .hero-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    align-items: center;
  }

  .hero-text {
    position: relative;
    z-index: 2;
  }

  .hero-image {
    position: relative;
    z-index: 1;
    aspect-ratio: 4 / 5;
    overflow: hidden;
    background-color: #E8E6E0;
  }

  /* Desktop: overlapping columns */
  @media (min-width: 1024px) {
    .hero-grid {
      grid-template-columns: 55% 50%;
      gap: 0;
    }

    .hero-text {
      padding-right: 2rem;
    }

    .hero-image {
      margin-left: -10%;
      max-height: 75vh;
    }
  }

  /* Hero load animation */
  .hero-fade {
    opacity: 0;
    transform: translateY(12px);
    animation: heroFadeIn 600ms ease-out forwards;
  }

  @keyframes heroFadeIn {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Scroll reveal: initial hidden state */
  [data-animate] {
    opacity: 0;
    transform: translateY(20px);
  }

  /* Scroll reveal: visible state */
  [data-animate].is-visible {
    opacity: 1;
    transform: translateY(0);
    transition-property: opacity, transform;
    transition-duration: 500ms;
    transition-timing-function: ease-out;
  }

  /* Respect reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .hero-fade {
      opacity: 1;
      transform: none;
      animation: none;
    }

    [data-animate] {
      opacity: 1;
      transform: none;
    }

    [data-animate].is-visible {
      transition: none;
    }
  }
</style>

<script>
  const prefersReduced = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
  const isTouch = window.matchMedia('(hover: none)').matches;

  // --- Scroll reveal observer ---
  if (!prefersReduced) {
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add('is-visible');
            observer.unobserve(entry.target);
          }
        });
      },
      { rootMargin: '0px 0px -60px 0px', threshold: 0.1 }
    );

    document.querySelectorAll('[data-animate]').forEach((el) => {
      observer.observe(el);
    });
  }

  // --- Hero mouse parallax ---
  if (!prefersReduced && !isTouch) {
    const heroSection = document.querySelector<HTMLElement>('[data-hero-parallax]');
    if (heroSection) {
      const layers = heroSection.querySelectorAll<HTMLElement>('[data-parallax-layer]');
      let mouseX = 0;
      let mouseY = 0;
      let currentX = 0;
      let currentY = 0;
      const lerp = 0.08;
      const maxMove = 15;

      heroSection.addEventListener('mousemove', (e: MouseEvent) => {
        const rect = heroSection.getBoundingClientRect();
        mouseX = ((e.clientX - rect.left) / rect.width - 0.5) * 2;
        mouseY = ((e.clientY - rect.top) / rect.height - 0.5) * 2;
      });

      heroSection.addEventListener('mouseleave', () => {
        mouseX = 0;
        mouseY = 0;
      });

      function animateParallax(): void {
        currentX += (mouseX - currentX) * lerp;
        currentY += (mouseY - currentY) * lerp;

        layers.forEach((layer) => {
          const speed = parseFloat(layer.dataset.parallaxLayer || '0');
          const moveX = currentX * maxMove * (speed / 0.04);
          const moveY = currentY * maxMove * (speed / 0.04);
          layer.style.transform = `translate(${moveX}px, ${moveY}px)`;
        });

        requestAnimationFrame(animateParallax);
      }

      requestAnimationFrame(animateParallax);
    }
  }
</script>
