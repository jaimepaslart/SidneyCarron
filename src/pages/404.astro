---
import PageLayout from '@/layouts/PageLayout.astro';
import { getLangFromUrl, getTranslation, getLocalizedPath } from '@/i18n';

const lang = getLangFromUrl(Astro.url);
const t = getTranslation(lang);
---

<PageLayout
  title={`${t('404.title')} â€” Sidney Carron`}
  description={t('404.message')}
  noindex={true}
>
  <div class="flex-1 flex items-center justify-center">
    <section class="museum-section">
      <div class="museum-container text-center">
        <p class="font-serif text-hero text-museum-border mb-4">404</p>
        <h1 class="text-h1 font-serif font-light text-museum-text">{t('404.title')}</h1>
        <p class="font-sans text-body text-museum-caption mt-4 max-w-md mx-auto">
          {t('404.message')}
        </p>
        <a
          href={getLocalizedPath(lang, '/')}
          class="inline-block mt-8 font-sans text-small uppercase tracking-museum px-8 py-3 border border-museum-text text-museum-text bg-none rounded-full hover:bg-museum-text hover:text-museum-white transition-colors duration-base ease-museum"
        >
          {t('404.back_home')}
        </a>
      </div>
    </section>
  </div>
</PageLayout>
